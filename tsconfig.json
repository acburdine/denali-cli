{
  "compileOnSave": false,
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es6",
      "noImplicitAny": true,
      "sourceMap": false,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "importHelpers": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "outDir": "dist",
      "lib": ["es2017"],
      "baseUrl": ".",
      "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
